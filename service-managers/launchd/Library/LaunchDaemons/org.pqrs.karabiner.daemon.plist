<?xml version="1.0" encoding="UTF-8"?>
<!-- 
Commands
    sudo launchctl load /Library/LaunchDaemons/org.pqrs.karabiner.daemon.plist
    sudo launchctl unload /Library/LaunchDaemons/org.pqrs.karabiner.daemon.plist
-->
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>Label</key>
        <string>org.pqrs.karabiner.daemon</string>
        <key>ProgramArguments</key>
        <array>
            <string> /Library/Application
                Support/org.pqrs/Karabiner-DriverKit-VirtualHIDDevice/Applications/Karabiner-VirtualHIDDevice-Daemon.app/Contents/MacOS/Karabiner-VirtualHIDDevice-Daemon</string>
        </array>
        <key>RunAtLoad</key>
        <true />
        <key>KeepAlive</key>
        <true />
        <key>UserName</key>
        <string>root</string>
        <key>GroupName</key>
        <string>wheel</string>
    </dict>
</plist>
